{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"]   // Adicionando mapeamento de caminho para 'src'
    },
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": true,  // Habilitar verificação de case para evitar erros no ambiente Linux
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["node_modules", "dist"]  // Evitar que o compilador analise essas pastas
}
